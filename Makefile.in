_PATH   = $(patsubst $(monkey_root)/%, %, $(CURDIR))
CC      = @echo "  CC   $(_PATH)/$@"; $CC
CC_QUIET= @echo -n; $CC
CFLAGS  = $CFLAGS
LDFLAGS = $LDFLAGS
DEFS    = $DEFS
INCDIR  = ../../../../src/include -I../../src
OBJECTS = duda_package.o postgresql.o connection.o query.o async.o
SOURCES = duda_package.c postgresql.c connection.c query.c async.c

all: ../postgresql.dpkg

-include $(OBJECTS:.o=.d)

../postgresql.dpkg: $(OBJECTS)
	$(CC) $(CFLAGS) $(LDFLAGS) $(DEFS) -shared -o $@ $^ -lc -lpq

.c.o: $(SOURCES)
	$(CC) $(CFLAGS) $(DEFS) -I$(INCDIR) -fPIC -c $<
	$(CC_QUIET) -MM -MP $(CFLAGS) $(DEFS) -I$(INCDIR) $*.c -o $*.d > /dev/null &2>&1

clean:
	rm -rf *~ *.o
